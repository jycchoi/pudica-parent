<?xml version="1.0" encoding="UTF-8"?>
<project name="Pudica Parent"
  xmlns="http://maven.apache.org/DECORATION/1.8.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://maven.apache.org/DECORATION/1.8.0
    https://maven.apache.org/xsd/decoration-1.8.0.xsd
  ">
  <bannerLeft>
    <name>${project.name}</name>
    <href>https://www.pudica.org/</href>
  </bannerLeft>

  <publishDate position="right" />
  <version position="right" />

  <skin>
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.10.0</version>
  </skin>

  <body>
    <breadcrumbs>
      <item name="Pudica" href="https://www.pudica.org/" />
    </breadcrumbs>

    <menu inherit="bottom" ref="modules" />
    <menu inherit="bottom" ref="reports" />
  </body>

  <custom>
    <fluidoSkin>
      <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
      <github>
        <projectId>jycchoi/${project.artifactId}</projectId>
        <ribbonOrientation>right</ribbonOrientation>
      </github>
    </fluidoSkin>
  </custom>
</project>
